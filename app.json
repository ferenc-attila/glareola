{
  "expo": {
    "name": "Glareola",
    "slug": "glareola",
    "version": "0.0.5",
    "githubUrl": "https://github.com/ferenc-attila/glareola",
    "icon": "./assets/images/glareola_icon.png",
    "userInterfaceStyle": "dark",
    "orientation": "portrait",
    "splash": {
      "image": "./assets/images/glareola_pratincola.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "CFBundleAllowMixedLocalizations": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/glareola_icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "hu.delheves.glareola"
    },
    "locales": {
      "en": "./src/localization/translations/en_GB.json",
      "de": "./src/localization/translations/de_DE.json",
      "hu": "./src/localization/translations/hu_HU.json",
      "sk": "./src/localization/translations/sk_SK.json",
      "ro": "./src/localization/translations/ro_RO.json"
    },
    "web": {
      "favicon": "./assets/images/glareola_icon.png"
    },
    "extra": {
      "eas": {
        "projectId": "d3975595-4258-4e8d-8cd8-b59c09d0e8dd"
      }
    },
    "owner": "expopuma",
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true
          }
        }
      ],
      "expo-localization"
    ]
  }
}
